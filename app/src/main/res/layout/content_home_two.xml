<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/services"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/red_back"
        android:gravity="center"
        android:padding="10dp"
        android:text="SERVICES"
        android:textColor="#fff"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/machines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_below="@id/services"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Machines"
        android:textColor="@color/darkGreen"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/machines_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/machines"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/machinesRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/pesticides"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_below="@id/machines_card"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:text="Pesticides"
        android:textColor="@color/darkGreen"
        android:textSize="24sp" />
    <androidx.cardview.widget.CardView
        android:id="@+id/pesticides_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pesticides"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pesticidesRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/pesticides_card"
        android:background="@drawable/red_back">

        <TextView
            android:id="@+id/desc_farmket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FARMKET"
            android:textColor="@color/yellow"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Address"
            android:textColor="@color/white"
            android:layout_below="@id/desc_farmket"
            android:layout_marginStart="5dp"
            android:padding="5dp"/>

    </RelativeLayout>

</RelativeLayout>